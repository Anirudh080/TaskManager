    </head>
   <script src=" https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <body style="background-image: url(../bg.jpg);">
<section class="container">
        <h1 align="center">TASK MANAGER</h1>

         
        <form action="/create-task" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th >Add</th>
                    <th >Groups</th>
                    <th >Date</th>
                    <th ></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="Add your task" required></input></th>
                      <td >  <select name="category" required>

                        <option>Technical</option>
                        <option>Personal</option>
                        <option>Public</option>
                        <option>Social</option>
                        <option>Other</option>

                    </select></th>
                      <td > <input type="date" name="date" required></th>
                      <td ><input type="submit"  class="btn btn-secondary"id="add" value="ADD TASK"></th>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div style="color: white;">          
                <h1 align="center">TASKS LIST</h1>

                <form action="/delete-task" method="GET">
                    <table class="table">
                        <thead>
                            <tr>
                              <th>checkbox</th>
                              <th>Task</th>
                              <th>Classifications</th>
                            <th>Deadline</th>
                            </tr>
                          </thead>
                        <% for(let i of task) { %>
                            

<tr>

                               <td> <input type="checkbox" name="<%= i._id %>" ></td>
                               <td> <p id="task-description"><%= i.description %></td>
                                <td><p id="task-category" style="margin-bottom: 0;"></p>: <%= i.category %></td>
                                <td><p id="due-date">: <%= i.date %></p></td>
                               <td><a href="/update">Edit</a></td>
</tr>
                    

                        <% } %>
                            
                

                           
</table>
<div  align = "center"><input type="submit" class="btn btn-danger" value="DELETE">
                </div>></form>

        
            </div>
    </body>
    
</html>